<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_login_out"
        style="@style/normal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:autoLink="all"
        android:text="退出登录" />


    <TextView
        android:id="@+id/tv_nim_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="网易云信音频通话"
        android:textColor="@color/color_000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_edit_account_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_nim_title"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/normal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="呼叫帐号" />

        <EditText
            android:id="@+id/edt_call_account"
            style="@style/normal_text_view"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/edit_text_normal_bg"
            android:maxLines="1"
            android:padding="4dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_call"
        style="@style/normal_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_edit_account_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/edit_text_normal_bg"
        android:paddingBottom="6dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="6dp"
        android:text="立即呼叫" />


    <TextView
        android:id="@+id/tv_calling_hint"
        style="@style/normal_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_nim_title"
        android:background="@android:color/white"
        android:gravity="center"
        android:visibility="gone"
        tools:background="#ff0000"
        tools:text="正在呼叫xxx" />

    <RelativeLayout
        android:id="@+id/rl_be_invite_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tv_nim_title"
        android:background="@android:color/white"
        android:visibility="gone"
        tools:background="#ff0000"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_be_invite_hint"
            style="@style/normal_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            tools:text="xxx邀请你通话" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_accept_invite"
                style="@style/normal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/click_btn_selector_bg"
                android:paddingBottom="6dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="6dp"
                android:text="接受" />

            <TextView
                android:id="@+id/tv_reject_invite"
                style="@style/normal_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/click_btn_selector_bg"
                android:paddingBottom="6dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="6dp"
                android:text="拒绝" />

        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>